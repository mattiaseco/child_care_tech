<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.Step3AggiungiGitaontroller">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="bambinoTable" prefHeight="350.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="targaColumn" prefWidth="150.0" text="targa" />
                <TableColumn fx:id="capienzaColumn" prefWidth="150.0" text="capienza" />
                  <TableColumn fx:id="aderisceColumn" prefWidth="150.0" text="prenota" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <children>
                        <Button fx:id="aggiungipullmanbutton" minWidth="150.0" mnemonicParsing="false" onAction="#goToAggiungiPullman" prefWidth="80.0" text="aggiungi pullman">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" minWidth="200.0" prefWidth="400.0" spacing="20.0">
                     <children>
                        <Label alignment="CENTER" text="Totale posti disponibili:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="totaleAderenzeLabel" minWidth="40.0" textFill="RED">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <padding>
                              <Insets right="30.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" right="20.0" />
               </padding>
               <children>
                  <Button fx:id="annullabutton" minWidth="80.0" mnemonicParsing="false" onAction="#returnToGitePane" prefWidth="80.0" text=" annulla " />
                  <Button fx:id="confermabutton" minWidth="80.0" mnemonicParsing="false" onAction="#goToGitePane" prefWidth="80.0" text="conferma">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
